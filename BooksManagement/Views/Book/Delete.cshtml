@model Book
@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>
<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Book</h2>
            <hr />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Title" class="p-0"></label>
            <input asp-for="Title" disabled class="form-control" />
           
        </div>
        <div class="row">
            <div class="col-6">
                <button type="submit" class="btn btn-danger form-control">Delete</button>

            </div>
            <div class="col-6">
                <a asp-controller="Book" asp-action="Index" class="btn btn-outline-secondary border form-control">
                    Back To List
                </a>
            </div>
        </div>

    </div>
</form>

